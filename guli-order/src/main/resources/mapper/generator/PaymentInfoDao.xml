<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guliorder.dao.PaymentInfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="guliorder.entity.PaymentInfoEntity" id="paymentInfoMap">
        <result property="id" column="id"/>
        <result property="orderSn" column="order_sn"/>
        <result property="orderId" column="order_id"/>
        <result property="alipayTradeNo" column="alipay_trade_no"/>
        <result property="totalAmount" column="total_amount"/>
        <result property="subject" column="subject"/>
        <result property="paymentStatus" column="payment_status"/>
        <result property="createTime" column="create_time"/>
        <result property="confirmTime" column="confirm_time"/>
        <result property="callbackContent" column="callback_content"/>
        <result property="callbackTime" column="callback_time"/>
    </resultMap>

	<select id="queryObject" resultType="guliorder.entity.PaymentInfoEntity">
		select * from oms_payment_info where id = #{value}
	</select>

	<select id="queryList" resultType="guliorder.entity.PaymentInfoEntity">
		select * from oms_payment_info
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from oms_payment_info 
	</select>
	 
	<insert id="save" parameterType="guliorder.entity.PaymentInfoEntity" useGeneratedKeys="true" keyProperty="id">
		insert into oms_payment_info
		(
			`order_sn`, 
			`order_id`, 
			`alipay_trade_no`, 
			`total_amount`, 
			`subject`, 
			`payment_status`, 
			`create_time`, 
			`confirm_time`, 
			`callback_content`, 
			`callback_time`
		)
		values
		(
			#{orderSn}, 
			#{orderId}, 
			#{alipayTradeNo}, 
			#{totalAmount}, 
			#{subject}, 
			#{paymentStatus}, 
			#{createTime}, 
			#{confirmTime}, 
			#{callbackContent}, 
			#{callbackTime}
		)
	</insert>
	 
	<update id="updatee" parameterType="guliorder.entity.PaymentInfoEntity">
		update oms_payment_info 
		<set>
			<if test="orderSn != null">`order_sn` = #{orderSn}, </if>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="alipayTradeNo != null">`alipay_trade_no` = #{alipayTradeNo}, </if>
			<if test="totalAmount != null">`total_amount` = #{totalAmount}, </if>
			<if test="subject != null">`subject` = #{subject}, </if>
			<if test="paymentStatus != null">`payment_status` = #{paymentStatus}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="confirmTime != null">`confirm_time` = #{confirmTime}, </if>
			<if test="callbackContent != null">`callback_content` = #{callbackContent}, </if>
			<if test="callbackTime != null">`callback_time` = #{callbackTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deletee">
		delete from oms_payment_info where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from oms_payment_info where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>