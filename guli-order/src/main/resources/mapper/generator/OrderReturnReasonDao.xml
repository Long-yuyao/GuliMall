<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guliorder.dao.OrderReturnReasonDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="guliorder.entity.OrderReturnReasonEntity" id="orderReturnReasonMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sort" column="sort"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="guliorder.entity.OrderReturnReasonEntity">
		select * from oms_order_return_reason where id = #{value}
	</select>

	<select id="queryList" resultType="guliorder.entity.OrderReturnReasonEntity">
		select * from oms_order_return_reason
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from oms_order_return_reason 
	</select>
	 
	<insert id="save" parameterType="guliorder.entity.OrderReturnReasonEntity" useGeneratedKeys="true" keyProperty="id">
		insert into oms_order_return_reason
		(
			`name`, 
			`sort`, 
			`status`, 
			`create_time`
		)
		values
		(
			#{name}, 
			#{sort}, 
			#{status}, 
			#{createTime}
		)
	</insert>
	 
	<update id="updatee" parameterType="guliorder.entity.OrderReturnReasonEntity">
		update oms_order_return_reason 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deletee">
		delete from oms_order_return_reason where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from oms_order_return_reason where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>