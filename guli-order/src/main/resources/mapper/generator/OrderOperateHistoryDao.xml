<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guliorder.dao.OrderOperateHistoryDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="guliorder.entity.OrderOperateHistoryEntity" id="orderOperateHistoryMap">
        <result property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="operateMan" column="operate_man"/>
        <result property="createTime" column="create_time"/>
        <result property="orderStatus" column="order_status"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<select id="queryObject" resultType="guliorder.entity.OrderOperateHistoryEntity">
		select * from oms_order_operate_history where id = #{value}
	</select>

	<select id="queryList" resultType="guliorder.entity.OrderOperateHistoryEntity">
		select * from oms_order_operate_history
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from oms_order_operate_history 
	</select>
	 
	<insert id="save" parameterType="guliorder.entity.OrderOperateHistoryEntity" useGeneratedKeys="true" keyProperty="id">
		insert into oms_order_operate_history
		(
			`order_id`, 
			`operate_man`, 
			`create_time`, 
			`order_status`, 
			`remark`
		)
		values
		(
			#{orderId}, 
			#{operateMan}, 
			#{createTime}, 
			#{orderStatus}, 
			#{remark}
		)
	</insert>
	 
	<update id="updatee" parameterType="guliorder.entity.OrderOperateHistoryEntity">
		update oms_order_operate_history 
		<set>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="operateMan != null">`operate_man` = #{operateMan}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="orderStatus != null">`order_status` = #{orderStatus}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deletee">
		delete from oms_order_operate_history where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from oms_order_operate_history where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>