<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulimember.dao.UserCollectSubjectDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulimember.entity.UserCollectSubjectEntity" id="userCollectSubjectMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="subjectId" column="subject_id"/>
        <result property="subjectName" column="subject_name"/>
        <result property="subjectImage" column="subject_image"/>
        <result property="subjectUrl" column="subject_url"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="gulimember.entity.UserCollectSubjectEntity">
		select * from ums_user_collect_subject where id = #{value}
	</select>

	<select id="queryList" resultType="gulimember.entity.UserCollectSubjectEntity">
		select * from ums_user_collect_subject
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from ums_user_collect_subject 
	</select>
	 
	<insert id="save" parameterType="gulimember.entity.UserCollectSubjectEntity" useGeneratedKeys="true" keyProperty="id">
		insert into ums_user_collect_subject
		(
			`user_id`, 
			`subject_id`, 
			`subject_name`, 
			`subject_image`, 
			`subject_url`, 
			`create_time`
		)
		values
		(
			#{userId}, 
			#{subjectId}, 
			#{subjectName}, 
			#{subjectImage}, 
			#{subjectUrl}, 
			#{createTime}
		)
	</insert>
	 
	<update id="updatee" parameterType="gulimember.entity.UserCollectSubjectEntity">
		update ums_user_collect_subject 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="subjectId != null">`subject_id` = #{subjectId}, </if>
			<if test="subjectName != null">`subject_name` = #{subjectName}, </if>
			<if test="subjectImage != null">`subject_image` = #{subjectImage}, </if>
			<if test="subjectUrl != null">`subject_url` = #{subjectUrl}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deletee">
		delete from ums_user_collect_subject where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from ums_user_collect_subject where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>