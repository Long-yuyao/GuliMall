<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulicoupon.dao.SkuBoundsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulicoupon.entity.SkuBoundsEntity" id="skuBoundsMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="growBounds" column="grow_bounds"/>
        <result property="buyBounds" column="buy_bounds"/>
        <result property="work" column="work"/>
    </resultMap>

	<select id="queryObject" resultType="gulicoupon.entity.SkuBoundsEntity">
		select * from sms_sku_bounds where id = #{value}
	</select>

	<select id="queryList" resultType="gulicoupon.entity.SkuBoundsEntity">
		select * from sms_sku_bounds
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_sku_bounds 
	</select>
	 
	<insert id="save" parameterType="gulicoupon.entity.SkuBoundsEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sms_sku_bounds
		(
			`sku_id`, 
			`grow_bounds`, 
			`buy_bounds`, 
			`work`
		)
		values
		(
			#{skuId}, 
			#{growBounds}, 
			#{buyBounds}, 
			#{work}
		)
	</insert>
	 
	<update id="coupdate" parameterType="gulicoupon.entity.SkuBoundsEntity">
		update sms_sku_bounds 
		<set>
			<if test="skuId != null">`sku_id` = #{skuId}, </if>
			<if test="growBounds != null">`grow_bounds` = #{growBounds}, </if>
			<if test="buyBounds != null">`buy_bounds` = #{buyBounds}, </if>
			<if test="work != null">`work` = #{work}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="codelete">
		delete from sms_sku_bounds where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_sku_bounds where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>