<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulicoupon.dao.SkuLadderDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulicoupon.entity.SkuLadderEntity" id="skuLadderMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="fullCount" column="full_count"/>
        <result property="discount" column="discount"/>
        <result property="addOther" column="add_other"/>
    </resultMap>

	<select id="queryObject" resultType="gulicoupon.entity.SkuLadderEntity">
		select * from sms_sku_ladder where id = #{value}
	</select>

	<select id="queryList" resultType="gulicoupon.entity.SkuLadderEntity">
		select * from sms_sku_ladder
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_sku_ladder 
	</select>
	 
	<insert id="save" parameterType="gulicoupon.entity.SkuLadderEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sms_sku_ladder
		(
			`sku_id`, 
			`full_count`, 
			`discount`, 
			`add_other`
		)
		values
		(
			#{skuId}, 
			#{fullCount}, 
			#{discount}, 
			#{addOther}
		)
	</insert>
	 
	<update id="coupdate" parameterType="gulicoupon.entity.SkuLadderEntity">
		update sms_sku_ladder 
		<set>
			<if test="skuId != null">`sku_id` = #{skuId}, </if>
			<if test="fullCount != null">`full_count` = #{fullCount}, </if>
			<if test="discount != null">`discount` = #{discount}, </if>
			<if test="addOther != null">`add_other` = #{addOther}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="codelete">
		delete from sms_sku_ladder where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_sku_ladder where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>