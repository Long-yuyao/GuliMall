<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulicoupon.dao.HomeAdvDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulicoupon.entity.HomeAdvEntity" id="homeAdvMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pic" column="pic"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="status" column="status"/>
        <result property="clickCount" column="click_count"/>
        <result property="url" column="url"/>
        <result property="note" column="note"/>
        <result property="sort" column="sort"/>
        <result property="publisherId" column="publisher_id"/>
        <result property="authId" column="auth_id"/>
    </resultMap>

	<select id="queryObject" resultType="gulicoupon.entity.HomeAdvEntity">
		select * from sms_home_adv where id = #{value}
	</select>

	<select id="queryList" resultType="gulicoupon.entity.HomeAdvEntity">
		select * from sms_home_adv
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_home_adv 
	</select>
	 
	<insert id="save" parameterType="gulicoupon.entity.HomeAdvEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sms_home_adv
		(
			`name`, 
			`pic`, 
			`start_time`, 
			`end_time`, 
			`status`, 
			`click_count`, 
			`url`, 
			`note`, 
			`sort`, 
			`publisher_id`, 
			`auth_id`
		)
		values
		(
			#{name}, 
			#{pic}, 
			#{startTime}, 
			#{endTime}, 
			#{status}, 
			#{clickCount}, 
			#{url}, 
			#{note}, 
			#{sort}, 
			#{publisherId}, 
			#{authId}
		)
	</insert>
	 
	<update id="coupdate" parameterType="gulicoupon.entity.HomeAdvEntity">
		update sms_home_adv 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="pic != null">`pic` = #{pic}, </if>
			<if test="startTime != null">`start_time` = #{startTime}, </if>
			<if test="endTime != null">`end_time` = #{endTime}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="clickCount != null">`click_count` = #{clickCount}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="note != null">`note` = #{note}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
			<if test="publisherId != null">`publisher_id` = #{publisherId}, </if>
			<if test="authId != null">`auth_id` = #{authId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="codelete">
		delete from sms_home_adv where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_home_adv where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>