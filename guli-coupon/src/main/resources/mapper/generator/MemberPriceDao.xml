<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulicoupon.dao.MemberPriceDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulicoupon.entity.MemberPriceEntity" id="memberPriceMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="memberLevelId" column="member_level_id"/>
        <result property="memberLevelName" column="member_level_name"/>
        <result property="memberPrice" column="member_price"/>
        <result property="addOther" column="add_other"/>
    </resultMap>

	<select id="queryObject" resultType="gulicoupon.entity.MemberPriceEntity">
		select * from sms_member_price where id = #{value}
	</select>

	<select id="queryList" resultType="gulicoupon.entity.MemberPriceEntity">
		select * from sms_member_price
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_member_price 
	</select>
	 
	<insert id="save" parameterType="gulicoupon.entity.MemberPriceEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sms_member_price
		(
			`sku_id`, 
			`member_level_id`, 
			`member_level_name`, 
			`member_price`, 
			`add_other`
		)
		values
		(
			#{skuId}, 
			#{memberLevelId}, 
			#{memberLevelName}, 
			#{memberPrice}, 
			#{addOther}
		)
	</insert>
	 
	<update id="coupdate" parameterType="gulicoupon.entity.MemberPriceEntity">
		update sms_member_price 
		<set>
			<if test="skuId != null">`sku_id` = #{skuId}, </if>
			<if test="memberLevelId != null">`member_level_id` = #{memberLevelId}, </if>
			<if test="memberLevelName != null">`member_level_name` = #{memberLevelName}, </if>
			<if test="memberPrice != null">`member_price` = #{memberPrice}, </if>
			<if test="addOther != null">`add_other` = #{addOther}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="codelete">
		delete from sms_member_price where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_member_price where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>