<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulicoupon.dao.HomeSubjectDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulicoupon.entity.HomeSubjectEntity" id="homeSubjectMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="title" column="title"/>
        <result property="subTitle" column="sub_title"/>
        <result property="status" column="status"/>
        <result property="url" column="url"/>
        <result property="sort" column="sort"/>
        <result property="img" column="img"/>
    </resultMap>

	<select id="queryObject" resultType="gulicoupon.entity.HomeSubjectEntity">
		select * from sms_home_subject where id = #{value}
	</select>

	<select id="queryList" resultType="gulicoupon.entity.HomeSubjectEntity">
		select * from sms_home_subject
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_home_subject 
	</select>
	 
	<insert id="save" parameterType="gulicoupon.entity.HomeSubjectEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sms_home_subject
		(
			`name`, 
			`title`, 
			`sub_title`, 
			`status`, 
			`url`, 
			`sort`, 
			`img`
		)
		values
		(
			#{name}, 
			#{title}, 
			#{subTitle}, 
			#{status}, 
			#{url}, 
			#{sort}, 
			#{img}
		)
	</insert>
	 
	<update id="coupdate" parameterType="gulicoupon.entity.HomeSubjectEntity">
		update sms_home_subject 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="title != null">`title` = #{title}, </if>
			<if test="subTitle != null">`sub_title` = #{subTitle}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
			<if test="img != null">`img` = #{img}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="codelete">
		delete from sms_home_subject where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_home_subject where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>