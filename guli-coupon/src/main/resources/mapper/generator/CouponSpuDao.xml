<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulicoupon.dao.CouponSpuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulicoupon.entity.CouponSpuEntity" id="couponSpuMap">
        <result property="id" column="id"/>
        <result property="couponId" column="coupon_id"/>
        <result property="spuId" column="spu_id"/>
        <result property="spuName" column="spu_name"/>
    </resultMap>

	<select id="queryObject" resultType="gulicoupon.entity.CouponSpuEntity">
		select * from sms_coupon_spu where id = #{value}
	</select>

	<select id="queryList" resultType="gulicoupon.entity.CouponSpuEntity">
		select * from sms_coupon_spu
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_coupon_spu 
	</select>
	 
	<insert id="save" parameterType="gulicoupon.entity.CouponSpuEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sms_coupon_spu
		(
			`coupon_id`, 
			`spu_id`, 
			`spu_name`
		)
		values
		(
			#{couponId}, 
			#{spuId}, 
			#{spuName}
		)
	</insert>
	 
	<update id="coupdate" parameterType="gulicoupon.entity.CouponSpuEntity">
		update sms_coupon_spu 
		<set>
			<if test="couponId != null">`coupon_id` = #{couponId}, </if>
			<if test="spuId != null">`spu_id` = #{spuId}, </if>
			<if test="spuName != null">`spu_name` = #{spuName}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="codelete">
		delete from sms_coupon_spu where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_coupon_spu where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>