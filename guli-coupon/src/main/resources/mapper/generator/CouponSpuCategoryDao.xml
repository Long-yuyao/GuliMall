<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulicoupon.dao.CouponSpuCategoryDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulicoupon.entity.CouponSpuCategoryEntity" id="couponSpuCategoryMap">
        <result property="id" column="id"/>
        <result property="couponId" column="coupon_id"/>
        <result property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
    </resultMap>

	<select id="queryObject" resultType="gulicoupon.entity.CouponSpuCategoryEntity">
		select * from sms_coupon_spu_category where id = #{value}
	</select>

	<select id="queryList" resultType="gulicoupon.entity.CouponSpuCategoryEntity">
		select * from sms_coupon_spu_category
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_coupon_spu_category 
	</select>
	 
	<insert id="save" parameterType="gulicoupon.entity.CouponSpuCategoryEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sms_coupon_spu_category
		(
			`coupon_id`, 
			`category_id`, 
			`category_name`
		)
		values
		(
			#{couponId}, 
			#{categoryId}, 
			#{categoryName}
		)
	</insert>
	 
	<update id="coupdate" parameterType="gulicoupon.entity.CouponSpuCategoryEntity">
		update sms_coupon_spu_category 
		<set>
			<if test="couponId != null">`coupon_id` = #{couponId}, </if>
			<if test="categoryId != null">`category_id` = #{categoryId}, </if>
			<if test="categoryName != null">`category_name` = #{categoryName}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="codelete">
		delete from sms_coupon_spu_category where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_coupon_spu_category where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>