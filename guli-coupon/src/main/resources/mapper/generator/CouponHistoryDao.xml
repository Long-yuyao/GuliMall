<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulicoupon.dao.CouponHistoryDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulicoupon.entity.CouponHistoryEntity" id="couponHistoryMap">
        <result property="id" column="id"/>
        <result property="couponId" column="coupon_id"/>
        <result property="memberId" column="member_id"/>
        <result property="memberNickName" column="member_nick_name"/>
        <result property="getType" column="get_type"/>
        <result property="createTime" column="create_time"/>
        <result property="useType" column="use_type"/>
        <result property="useTime" column="use_time"/>
        <result property="orderId" column="order_id"/>
        <result property="orderSn" column="order_sn"/>
    </resultMap>

	<select id="queryObject" resultType="gulicoupon.entity.CouponHistoryEntity">
		select * from sms_coupon_history where id = #{value}
	</select>

	<select id="queryList" resultType="gulicoupon.entity.CouponHistoryEntity">
		select * from sms_coupon_history
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_coupon_history 
	</select>
	 
	<insert id="save" parameterType="gulicoupon.entity.CouponHistoryEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sms_coupon_history
		(
			`coupon_id`, 
			`member_id`, 
			`member_nick_name`, 
			`get_type`, 
			`create_time`, 
			`use_type`, 
			`use_time`, 
			`order_id`, 
			`order_sn`
		)
		values
		(
			#{couponId}, 
			#{memberId}, 
			#{memberNickName}, 
			#{getType}, 
			#{createTime}, 
			#{useType}, 
			#{useTime}, 
			#{orderId}, 
			#{orderSn}
		)
	</insert>
	 
	<update id="coupdate" parameterType="gulicoupon.entity.CouponHistoryEntity">
		update sms_coupon_history 
		<set>
			<if test="couponId != null">`coupon_id` = #{couponId}, </if>
			<if test="memberId != null">`member_id` = #{memberId}, </if>
			<if test="memberNickName != null">`member_nick_name` = #{memberNickName}, </if>
			<if test="getType != null">`get_type` = #{getType}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="useType != null">`use_type` = #{useType}, </if>
			<if test="useTime != null">`use_time` = #{useTime}, </if>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="orderSn != null">`order_sn` = #{orderSn}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="codelete">
		delete from sms_coupon_history where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_coupon_history where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>