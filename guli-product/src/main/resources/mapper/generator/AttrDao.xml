<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yuyao.guliproduct.dao.AttrDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.yuyao.guliproduct.entity.AttrEntity" id="attrMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="searchType" column="search_type"/>
        <result property="icon" column="icon"/>
        <result property="valueSelect" column="value_select"/>
        <result property="type" column="type"/>
        <result property="enable" column="enable"/>
        <result property="showDesc" column="show_desc"/>
        <result property="categoryId" column="category_id"/>
        <result property="groupId" column="group_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.yuyao.guliproduct.entity.AttrEntity">
		select * from pms_attr where id = #{value}
	</select>

	<select id="queryList" resultType="com.yuyao.guliproduct.entity.AttrEntity">
		select * from pms_attr
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from pms_attr 
	</select>
	 
	<insert id="save" parameterType="com.yuyao.guliproduct.entity.AttrEntity" useGeneratedKeys="true" keyProperty="id">
		insert into pms_attr
		(
			`name`, 
			`search_type`, 
			`icon`, 
			`value_select`, 
			`type`, 
			`enable`, 
			`show_desc`, 
			`category_id`, 
			`group_id`
		)
		values
		(
			#{name}, 
			#{searchType}, 
			#{icon}, 
			#{valueSelect}, 
			#{type}, 
			#{enable}, 
			#{showDesc}, 
			#{categoryId}, 
			#{groupId}
		)
	</insert>
	 
	<update id="proupdate" parameterType="com.yuyao.guliproduct.entity.AttrEntity">
		update pms_attr 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="searchType != null">`search_type` = #{searchType}, </if>
			<if test="icon != null">`icon` = #{icon}, </if>
			<if test="valueSelect != null">`value_select` = #{valueSelect}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="enable != null">`enable` = #{enable}, </if>
			<if test="showDesc != null">`show_desc` = #{showDesc}, </if>
			<if test="categoryId != null">`category_id` = #{categoryId}, </if>
			<if test="groupId != null">`group_id` = #{groupId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="prodelete">
		delete from pms_attr where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from pms_attr where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>