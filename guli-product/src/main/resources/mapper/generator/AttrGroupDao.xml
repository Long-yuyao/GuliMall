<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yuyao.guliproduct.dao.AttrGroupDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.yuyao.guliproduct.entity.AttrGroupEntity" id="attrGroupMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sort" column="sort"/>
        <result property="icon" column="icon"/>
        <result property="categoryId" column="category_id"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<select id="queryObject" resultType="com.yuyao.guliproduct.entity.AttrGroupEntity">
		select * from pms_attr_group where id = #{value}
	</select>

	<select id="queryList" resultType="com.yuyao.guliproduct.entity.AttrGroupEntity">
		select * from pms_attr_group
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from pms_attr_group 
	</select>
	 
	<insert id="save" parameterType="com.yuyao.guliproduct.entity.AttrGroupEntity" useGeneratedKeys="true" keyProperty="id">
		insert into pms_attr_group
		(
			`name`, 
			`sort`, 
			`icon`, 
			`category_id`, 
			`remark`
		)
		values
		(
			#{name}, 
			#{sort}, 
			#{icon}, 
			#{categoryId}, 
			#{remark}
		)
	</insert>
	 
	<update id="proupdate" parameterType="com.yuyao.guliproduct.entity.AttrGroupEntity">
		update pms_attr_group 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
			<if test="icon != null">`icon` = #{icon}, </if>
			<if test="categoryId != null">`category_id` = #{categoryId}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="prodelete">
		delete from pms_attr_group where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from pms_attr_group where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>