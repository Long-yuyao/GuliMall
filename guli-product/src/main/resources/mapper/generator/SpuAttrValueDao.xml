<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yuyao.guliproduct.dao.SpuAttrValueDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.yuyao.guliproduct.entity.SpuAttrValueEntity" id="spuAttrValueMap">
        <result property="id" column="id"/>
        <result property="spuId" column="spu_id"/>
        <result property="attrId" column="attr_id"/>
        <result property="attrName" column="attr_name"/>
        <result property="attrValue" column="attr_value"/>
        <result property="sort" column="sort"/>
    </resultMap>

	<select id="queryObject" resultType="com.yuyao.guliproduct.entity.SpuAttrValueEntity">
		select * from pms_spu_attr_value where id = #{value}
	</select>

	<select id="queryList" resultType="com.yuyao.guliproduct.entity.SpuAttrValueEntity">
		select * from pms_spu_attr_value
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from pms_spu_attr_value 
	</select>
	 
	<insert id="save" parameterType="com.yuyao.guliproduct.entity.SpuAttrValueEntity" useGeneratedKeys="true" keyProperty="id">
		insert into pms_spu_attr_value
		(
			`spu_id`, 
			`attr_id`, 
			`attr_name`, 
			`attr_value`, 
			`sort`
		)
		values
		(
			#{spuId}, 
			#{attrId}, 
			#{attrName}, 
			#{attrValue}, 
			#{sort}
		)
	</insert>
	 
	<update id="proupdate" parameterType="com.yuyao.guliproduct.entity.SpuAttrValueEntity">
		update pms_spu_attr_value 
		<set>
			<if test="spuId != null">`spu_id` = #{spuId}, </if>
			<if test="attrId != null">`attr_id` = #{attrId}, </if>
			<if test="attrName != null">`attr_name` = #{attrName}, </if>
			<if test="attrValue != null">`attr_value` = #{attrValue}, </if>
			<if test="sort != null">`sort` = #{sort}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="prodelete">
		delete from pms_spu_attr_value where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from pms_spu_attr_value where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>