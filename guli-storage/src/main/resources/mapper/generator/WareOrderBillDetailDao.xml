<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulistorage.dao.WareOrderBillDetailDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulistorage.entity.WareOrderBillDetailEntity" id="wareOrderBillDetailMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="skuName" column="sku_name"/>
        <result property="skuNum" column="sku_num"/>
        <result property="taskId" column="task_id"/>
    </resultMap>

	<select id="queryObject" resultType="gulistorage.entity.WareOrderBillDetailEntity">
		select * from wms_ware_order_bill_detail where id = #{value}
	</select>

	<select id="queryList" resultType="gulistorage.entity.WareOrderBillDetailEntity">
		select * from wms_ware_order_bill_detail
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from wms_ware_order_bill_detail 
	</select>
	 
	<insert id="save" parameterType="gulistorage.entity.WareOrderBillDetailEntity" useGeneratedKeys="true" keyProperty="id">
		insert into wms_ware_order_bill_detail
		(
			`sku_id`, 
			`sku_name`, 
			`sku_num`, 
			`task_id`
		)
		values
		(
			#{skuId}, 
			#{skuName}, 
			#{skuNum}, 
			#{taskId}
		)
	</insert>
	 
	<update id="updatee" parameterType="gulistorage.entity.WareOrderBillDetailEntity">
		update wms_ware_order_bill_detail 
		<set>
			<if test="skuId != null">`sku_id` = #{skuId}, </if>
			<if test="skuName != null">`sku_name` = #{skuName}, </if>
			<if test="skuNum != null">`sku_num` = #{skuNum}, </if>
			<if test="taskId != null">`task_id` = #{taskId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deletee">
		delete from wms_ware_order_bill_detail where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from wms_ware_order_bill_detail where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>