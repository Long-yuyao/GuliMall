<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulistorage.dao.WareSkuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulistorage.entity.WareSkuEntity" id="wareSkuMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="wareId" column="ware_id"/>
        <result property="stock" column="stock"/>
        <result property="skuName" column="sku_name"/>
        <result property="stockLocked" column="stock_locked"/>
        <result property="sales" column="sales"/>
    </resultMap>

	<select id="queryObject" resultType="gulistorage.entity.WareSkuEntity">
		select * from wms_ware_sku where id = #{value}
	</select>

	<select id="queryList" resultType="gulistorage.entity.WareSkuEntity">
		select * from wms_ware_sku
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from wms_ware_sku 
	</select>
	 
	<insert id="save" parameterType="gulistorage.entity.WareSkuEntity" useGeneratedKeys="true" keyProperty="id">
		insert into wms_ware_sku
		(
			`sku_id`, 
			`ware_id`, 
			`stock`, 
			`sku_name`, 
			`stock_locked`, 
			`sales`
		)
		values
		(
			#{skuId}, 
			#{wareId}, 
			#{stock}, 
			#{skuName}, 
			#{stockLocked}, 
			#{sales}
		)
	</insert>
	 
	<update id="updatee" parameterType="gulistorage.entity.WareSkuEntity">
		update wms_ware_sku 
		<set>
			<if test="skuId != null">`sku_id` = #{skuId}, </if>
			<if test="wareId != null">`ware_id` = #{wareId}, </if>
			<if test="stock != null">`stock` = #{stock}, </if>
			<if test="skuName != null">`sku_name` = #{skuName}, </if>
			<if test="stockLocked != null">`stock_locked` = #{stockLocked}, </if>
			<if test="sales != null">`sales` = #{sales}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deletee">
		delete from wms_ware_sku where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from wms_ware_sku where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>