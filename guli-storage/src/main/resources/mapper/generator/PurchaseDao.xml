<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gulistorage.dao.PurchaseDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="gulistorage.entity.PurchaseEntity" id="purchaseMap">
        <result property="id" column="id"/>
        <result property="assigneeId" column="assignee_id"/>
        <result property="assigneeName" column="assignee_name"/>
        <result property="phone" column="phone"/>
        <result property="priority" column="priority"/>
        <result property="status" column="status"/>
        <result property="wareId" column="ware_id"/>
        <result property="amount" column="amount"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<select id="queryObject" resultType="gulistorage.entity.PurchaseEntity">
		select * from wms_purchase where id = #{value}
	</select>

	<select id="queryList" resultType="gulistorage.entity.PurchaseEntity">
		select * from wms_purchase
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from wms_purchase 
	</select>
	 
	<insert id="save" parameterType="gulistorage.entity.PurchaseEntity" useGeneratedKeys="true" keyProperty="id">
		insert into wms_purchase
		(
			`assignee_id`, 
			`assignee_name`, 
			`phone`, 
			`priority`, 
			`status`, 
			`ware_id`, 
			`amount`, 
			`create_time`, 
			`update_time`
		)
		values
		(
			#{assigneeId}, 
			#{assigneeName}, 
			#{phone}, 
			#{priority}, 
			#{status}, 
			#{wareId}, 
			#{amount}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="updatee" parameterType="gulistorage.entity.PurchaseEntity">
		update wms_purchase 
		<set>
			<if test="assigneeId != null">`assignee_id` = #{assigneeId}, </if>
			<if test="assigneeName != null">`assignee_name` = #{assigneeName}, </if>
			<if test="phone != null">`phone` = #{phone}, </if>
			<if test="priority != null">`priority` = #{priority}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="wareId != null">`ware_id` = #{wareId}, </if>
			<if test="amount != null">`amount` = #{amount}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deletee">
		delete from wms_purchase where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from wms_purchase where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>